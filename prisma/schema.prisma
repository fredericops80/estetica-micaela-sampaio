model HeroConfig {
  id              Int     @id @default(1)
  subtitle        String
  subtitleColor   String
  titlePrefix     String
  titleHighlight  String
  titleSuffix     String
  titleColor      String
  highlightColor  String
  ctaText         String
  ctaColor        String
  ctaTextColor    String
  backgroundImage String? @db.Text
}

model Testimonial {
  id        String   @id @default(uuid())
  name      String
  text      String   @db.Text
  rating    Int
  createdAt DateTime @default(now())
}

model GalleryItem {
  id        String   @id @default(uuid())
  imageUrl  String   @db.Text
  altText   String?
  category  String   @default("general") // 'general' or 'details'
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

model BeforeAfterItem {
  id          String   @id @default(uuid())
  beforeImage String   @db.Text
  afterImage  String   @db.Text
  title       String
  description String   @db.Text
  createdAt   DateTime @default(now())
}

model Service {
  id          String   @id @default(uuid())
  name        String
  category    String   // 'Facial' or 'Corporal'
  description String   @db.Text
  duration    String
  price       Float
  createdAt   DateTime @default(now())
}

model SiteConfig {
  id    String @id @default(uuid())
  key   String @unique
  value String @db.LongText // JSON string
}
